<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dodam.mapper.noticeMapper">

<!-- 새 공지글 작성 -->
<insert id = "insertnotice">
	insert into notice(title, writer, img, contents) values(#{title},#{writer}, #{img},#{contents})
</insert>

<!--  공지사항 전체글 가져오기 -->
<select id= "selectnoticeall" resultType ="sting">
	select * from notice order by no desc
</select>

<!--  공지사항 글 자세히 가져오기 -->
<select id = "selectnotice" resultType="sting">
	select * from notice where no = #{no}
</select>

<!--  공지사항 글 새로고침 -->
<update id="updatenotice">
	update notce set value() ;
</update>

<!--  공지사항 글 삭제 -->
<delete id="delnotice">
delete  from notice where no='#{no}'
</delete>

</mapper>